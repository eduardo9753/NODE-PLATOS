<section>
    <div class="container">
        <div class="row">
            <div class="col-md-5 mx-auto">
                <div class="card mt-5">
                    <div class="card-body">
                        <form action="/plate/FormAdd" method="POST" enctype="multipart/form-data">
                            <div>
                                <div class="form-group">
                                    <label for="" class="my-2">Foto</label>
                                    <input type="file" name="foto" id="" class="form-control" required autofocus>
                                </div>
                                <div class="form-group">
                                    <label for="" class="my-2">Nombre</label>
                                    <input type="text" name="name" id="" class="form-control" required
                                        placeholder="name of the plate">
                                </div>
                                <div class="form-group">
                                    <label for="" class="my-2">Description</label>
                                    <textarea name="description" id="" class="form-control"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="" class="my-2">Nivel de Preparacion</label>
                                    <select name="nivel" id="" class="form-control">
                                        <option value="1">Nivel 1</option>
                                        <option value="2">Nivel 2</option>
                                        <option value="3">Nivel 3</option>
                                        <option value="4">Nivel 4</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="" class="my-2">Precio</label>
                                    <input type="text" name="precio" id="" class="form-control" required
                                        placeholder="price">
                                </div>

                                <div class="my-3">
                                    <input type="submit" class="btn-input" value="Register" name="">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>