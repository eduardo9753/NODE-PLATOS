<section>
    <div class="container">
        <div class="row">
            <div class="col-md-5 mx-auto">
                <div class="card mt-2">
                    <div class="card-body">
                        <form action="/users/signupAdd" method="POST">
                            <div><img src="/img/user.svg" alt="" class="logo-user"></div>
                            <div>
                                <div class="form-group">
                                    <label for="" class="my-2">Name User</label>
                                    <input type="text" name="username" id="" class="form-control" placeholder="nombre"
                                        required autofocus>
                                </div>
                                <div class="form-group">
                                    <label for="" class="my-2">Firt Name</label>
                                    <input type="text" name="firt" id="" class="form-control" placeholder="Apellido"
                                        required>
                                </div>
                                <div class="form-group">
                                    <label for="" class="my-2">Email User</label>
                                    <input type="email" name="email" id="" class="form-control" required
                                        placeholder="@examples.com">
                                </div>
                                <div class="form-group">
                                    <label for="" class="my-2">Password</label>
                                    <input type="password" name="password" id="" class="form-control" required
                                        placeholder="********">
                                </div>
                                <div class="my-3">
                                    <input type="submit" class="btn-input" value="Register" name="">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>